{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Cool Color Picker",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "/js/background.js"
  },
  "icons": {
    "16": "/images/picker_16.png",
    "32": "/images/picker_32.png",
    "48": "/images/picker_48.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ]
}